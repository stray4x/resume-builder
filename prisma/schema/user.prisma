model User {
    id            String    @id
    name          String //@db.Text
    email         String
    emailVerified Boolean   @default(false)
    image         String? //@db.Text
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @default(now()) @updatedAt
    sessions      Session[]
    accounts      Account[]
    resumes       Resume[]

    @@unique([email])
    @@map("user")
}
